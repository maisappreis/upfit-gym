{
  "name": "vite-project",
  "private": true,
  "version": "1.0.0",
  "author": "Maisa Pierini Preis",
  "description": "This desktop application was developed to manage the company's customers, revenue and expenses.",
  "license": "MIT",
  "main": "main.cjs",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:start": "electron-forge start",
    "electron:package": "electron-forge package",
    "electron:make": "electron-forge make",
    "electron:pack": "electron-builder --dir",
    "electron:build": "electron-builder install-app-deps",
    "vite:dev": "concurrently \"vite\" \"npm run start:django\"",
    "electron:dev": "concurrently \"npm run electron\" \"npm run start:django\"",
    "start:django": "cd backend && python manage.py runserver"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.5.1",
    "@fortawesome/free-solid-svg-icons": "^6.5.1",
    "@fortawesome/vue-fontawesome": "^3.0.5",
    "axios": "^1.6.5",
    "bootstrap": "^5.3.2",
    "bootstrap-vue": "^2.23.1",
    "chart.js": "^4.4.1",
    "core-js": "^3.8.3",
    "cors": "^2.8.5",
    "electron-squirrel-startup": "^1.0.0",
    "vue": "^3.4.19",
    "vue-chartjs": "^5.3.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.3.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "concurrently": "^8.2.2",
    "electron": "^29.1.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "vue-tsc": "^1.8.27"
  }
}
